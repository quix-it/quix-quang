{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "schematics": {
    "@schematics/angular:component": {
      "inlineTemplate": false,
      "inlineStyle": false,
      "style": "scss",
      "skipTests": true,
      "type": "component"
    },
    "@schematics/angular:class": {
      "skipTests": true
    },
    "@schematics/angular:directive": {
      "skipTests": true,
      "type": "directive"
    },
    "@schematics/angular:guard": {
      "skipTests": true,
      "typeSeparator": "."
    },
    "@schematics/angular:interceptor": {
      "skipTests": true,
      "typeSeparator": "."
    },
    "@schematics/angular:pipe": {
      "skipTests": true,
      "typeSeparator": "."
    },
    "@schematics/angular:resolver": {
      "skipTests": true,
      "typeSeparator": "."
    },
    "@schematics/angular:service": {
      "skipTests": true,
      "type": "service"
    },
    "@schematics/angular:module": {
      "typeSeparator": "."
    }
  },
  "projects": {
    "quang": {
      "projectType": "library",
      "root": "projects/quang",
      "sourceRoot": "projects/quang/src",
      "prefix": "quang",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "options": {
            "project": "projects/quang/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/quang/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/quang/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/quang/**/*.ts", "projects/quang/**/*.html"]
          }
        }
      }
    },
    "playground": {
      "projectType": "application",
      "root": "projects/playground",
      "sourceRoot": "projects/playground/src",
      "prefix": "playground",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "baseHref": "/quix-quang/",
            "outputPath": "dist/playground",
            "index": "projects/playground/src/index.html",
            "browser": "projects/playground/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "projects/playground/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": ["projects/playground/src/favicon.ico", "projects/playground/src/assets"],
            "styles": [
              {
                "input": "projects/playground/src/sass/styles-light.scss",
                "bundleName": "light",
                "inject": true
              },
              {
                "input": "projects/playground/src/sass/styles-dark.scss",
                "bundleName": "dark",
                "inject": false
              }
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": { "open": true, "port": 4400 },
          "configurations": {
            "production": {
              "buildTarget": "playground:build:production"
            },
            "development": {
              "buildTarget": "playground:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": {
            "buildTarget": "playground:build"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/playground/src/**/*.ts", "projects/playground/src/**/*.html"]
          }
        },
        "deploy": {
          "builder": "angular-cli-ghpages:deploy"
        }
      }
    }
  },
  "cli": {
    "schematicCollections": ["@angular-eslint/schematics"],
    "analytics": false
  }
}
