{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "quix-core-components": [
        "dist/quix-core-components"
      ],
      "quix-core-components/*": [
        "dist/quix-core-components/*"
      ],
      "quix-core-authentication": [
        "dist/quix-core-authentication"
      ],
      "quix-core-authentication/*": [
        "dist/quix-core-authentication/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "enableIvy": false,
    "allowEmptyCodegenFiles": false,
    "strictInjectionParameters": true
  }
}
