{
  "name": "quix-quang",
  "version": "19.0.8",
  "scripts": {
    "ng": "ng",
    "start:playground": "ng serve playground --open",
    "build:quang": "ng build --project quang",
    "prepare": "husky",
    "build-publish": "npm run build:quang && cd dist/quang && npm publish",
    "build-publish:prerelease": "npm run build:quang && cd dist/quang && npm publish --tag prerelease",
    "sync-version": "jq '.version = \"'$npm_package_version'\"' projects/quang/package.json > temp.json && mv temp.json projects/quang/package.json",
    "version": "npm run sync-version && git add -A",
    "postversion": "git push && git push --tags",
    "publish:prerelease": "npm version prerelease -m \"build(prerelease): version %s\" && npm run build-publish:prerelease",
    "publish:patch": "npm version patch -m \"build(patch): version %s\" && npm run build-publish",
    "publish:minor": "npm version minor -m \"build(minor): version %s\" && npm run build-publish",
    "publish:major": "npm version major -m \"build(major): version %s\" && npm run build-publish",
    "lint": "ng lint",
    "code:lint": "npx eslint . --fix",
    "code:format": "npx prettier . -w --ignore-unknown",
    "code:lint-and-format": "npm run code:lint && npm run code:format"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.0.3",
    "@angular/cdk": "^19.0.2",
    "@angular/common": "^19.0.3",
    "@angular/compiler": "^19.0.3",
    "@angular/core": "^19.0.3",
    "@angular/forms": "^19.0.3",
    "@angular/platform-browser": "^19.0.3",
    "@angular/platform-browser-dynamic": "^19.0.3",
    "@angular/router": "^19.0.3",
    "@capacitor/app": "^6.0.0",
    "@capacitor/browser": "^6.0.1",
    "@capacitor/core": "^6.1.1",
    "@jsverse/transloco": "^7.5.0",
    "@ngrx/signals": "^19.0.0",
    "air-datepicker": "^3.5.0",
    "angular-oauth2-oidc": "^19.0.0",
    "angular-svg-icon": "^19.0.0",
    "bootstrap": "^5.3.3",
    "date-fns": "^3.6.0",
    "rxjs": "~7.8.0",
    "suneditor": "^2.46.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.3",
    "@angular-eslint/builder": "19.0.0",
    "@angular-eslint/eslint-plugin": "19.0.0",
    "@angular-eslint/eslint-plugin-template": "19.0.0",
    "@angular-eslint/schematics": "19.0.0",
    "@angular-eslint/template-parser": "19.0.0",
    "@angular/cli": "^19.0.3",
    "@angular/compiler-cli": "^19.0.3",
    "@capacitor/cli": "^6.1.1",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.1.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.0.0",
    "husky": "^9.1.2",
    "ng-packagr": "^19.0.1",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "typescript": "~5.5.2"
  }
}
